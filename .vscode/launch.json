{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jira‑RAG CLI",
      "type": "python",
      "request": "launch",
      "module": "jira_rag.interface",         // ✅ renamed from "jira_rag.app"
      "cwd": "${workspaceFolder}",
      "args": [],
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Jira‑RAG GUI",
      "type": "python",
      "request": "launch",
      "module": "jira_rag.app_gui",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Attach to Edge",
      "port": 9222,
      "request": "attach",
      "type": "msedge",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
